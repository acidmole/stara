<div class="container">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Games</th>
        <th scope="col">Wins</th>
        <th scope="col">Losses</th>
        <th scope="col">Scored for</th>
        <th scope="col">Scored against</th>
        <th scope="col">Points</th>
      </tr>
    </thead>
    <% @standings.each do |row| %>
      <tr>
        <td><%= row[1][:name] %></td>
        <td><%= row[1][:games] %></td>
        <td><%= row[1][:wins] %></td>
        <td><%= row[1][:losses] %></td>
        <td><%= row[1][:scored_for] %></td>
        <td><%= row[1][:scored_against] %></td>
        <td><%= row[1][:points] %></td>
      </tr>
    <% end %>
  </table>
</div>