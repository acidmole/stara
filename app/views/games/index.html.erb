<h2><%= @competition.name %></h2>
<div class="container">
  <h3>Sarjataulukko</h3>
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Games</th>
        <th scope="col">Wins</th>
        <th scope="col">Losses</th>
        <th scope="col">Scored for</th>
        <th scope="col">Scored against</th>
        <th scope="col">Points</th>
      </tr>
    </thead>
     <% @teams_with_standings.each do |row| %>
        <tr>
          <td><%= row.team.name %></td>
          <td><%= row.games %></td>
          <td><%= row.wins %></td>
          <td><%= row.losses %></td>
          <td><%= row.scored_for %></td>
          <td><%= row.scored_against %></td>
          <td><%= row.points %></td>
        </tr>
    <% end %>
  </table>
</div>

<div class="container">
  <h3>Ottelut</h3>
  <% unless @games_with_results.nil? %>
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Pvm</th>
          <th scope="col">Tulos</th>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <% @games_with_results.each do |game| %>
        <tr>
          <td><%= game.game_day %></td>
          <td>
            <% if game.result.home_team_score > game.result.away_team_score %>
              <strong><%= game.home_team.name %></strong>
              -<%= game.away_team.name %>
              <strong><%= game.result.home_team_score %></strong>
              -<%= game.result.away_team_score %>
            <% else %>
              <%= game.home_team.name %>
              -<strong><%= game.away_team.name %></strong>
              <%= game.result.home_team_score %>
              -<strong><%= game.result.away_team_score %></strong>
            <% end %>
          </td>

        </tr>
      <% end %>
    </table>
  <% end %>
</div>
